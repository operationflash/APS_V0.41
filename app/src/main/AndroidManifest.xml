<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.rubenhoebee.aps_v04">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.BLUETOOTH" /> // temporary

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ReadSensors"
            android:screenOrientation="portrait" />
        <activity android:name=".CollisionDetected" />
        <activity android:name=".CameraViewActivity" />
        <activity
            android:name=".ReadSensorsDebugMode"
            android:screenOrientation="portrait" />
        <activity
            android:name=".DrawJoystick"
            android:screenOrientation="sensorLandscape" />
        <activity android:name=".Activity_DrawJoystick" />
    </application>

</manifest>