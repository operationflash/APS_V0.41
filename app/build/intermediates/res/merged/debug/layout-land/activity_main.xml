<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.rubenhoebee.aps_v04.MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/APSMobileRobotControl"
        android:textSize="24sp"
        android:textAlignment="center" />

    <ImageView
        android:contentDescription="Aps Logo"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/aps_logo"
        android:id="@+id/imageView"
        android:scaleType="fitCenter"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_width="100dp" />

    <Button
        android:text="@string/View4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Camera4btn"
        android:onClick="openCamera4"
        android:textSize="18sp"
        android:layout_above="@+id/imageView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="56dp"
        android:layout_marginEnd="56dp" />

    <Button
        android:text="@string/View1"
        android:layout_height="wrap_content"
        android:id="@+id/Camera1btn"
        android:onClick="openCamera1"
        android:textSize="18sp"
        android:layout_width="wrap_content"
        android:layout_alignBaseline="@+id/Camera2btn"
        android:layout_alignBottom="@+id/Camera2btn"
        android:layout_toLeftOf="@+id/Camera2btn"
        android:layout_toStartOf="@+id/Camera2btn"
        android:layout_marginRight="52dp"
        android:layout_marginEnd="52dp" />

    <Button
        android:text="@string/View2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Camera2btn"
        android:onClick="openCamera2"
        android:textSize="18sp"
        android:layout_marginBottom="29dp"
        android:layout_above="@+id/Camera4btn"
        android:layout_alignLeft="@+id/Camera4btn"
        android:layout_alignStart="@+id/Camera4btn" />

    <Button
        android:text="@string/View3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Camera3btn"
        android:onClick="openCamera3"
        android:textSize="18sp"
        android:layout_alignBaseline="@+id/Camera4btn"
        android:layout_alignBottom="@+id/Camera4btn"
        android:layout_alignLeft="@+id/Camera1btn"
        android:layout_alignStart="@+id/Camera1btn" />

    <Button
        android:onClick="Login"
        android:text="@string/Login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="59dp"
        android:layout_marginStart="59dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/Camera3btn"
        android:layout_alignLeft="@+id/PasswordInpt"
        android:layout_alignStart="@+id/PasswordInpt" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textVisiblePassword"
        android:ems="10"
        android:id="@+id/UsernameInpt"
        android:hint="@string/Username"
        android:textAlignment="center"
        android:layout_alignBottom="@+id/Camera1btn"
        android:layout_alignLeft="@+id/PasswordInpt"
        android:layout_alignStart="@+id/PasswordInpt" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/PasswordInpt"
        android:hint="@string/Password"
        android:textAlignment="center"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_alignTop="@+id/Camera3btn"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
